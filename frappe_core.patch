+import frappe
+
+def get_context(context):
+
+    user = frappe.session.user
+
+    employee = frappe.db.get_value(
+        "Employee",
+        {"user_id": user},
+        ["name", "employee_name", "department", "relieving_date"],
+        as_dict=True
+    )
+
+    if not employee:
+        frappe.throw("You are not linked to any employee record.")
+
+    # salary = frappe.get_all(
+    #     "Salary Slip",
+    #     filters={"employee": employee.name, "docstatus": 1},
+    #     fields=["name", "start_date", "end_date","gross_pay", "net_pay","total_deduction"],
+    #      order_by="start_date desc"
+    # )
+
+    # salary = [frappe._dict(s) for s in salary]
+    salary = frappe.get_all(
+        "Salary Slip",
+        filters={"employee": employee.name, "docstatus": 1},
+        fields=["name", "start_date", "end_date", "gross_pay", "net_pay", "total_deduction"],
+        order_by="start_date desc"
+    )
+
+    # Convert None/Decimal to float
+    for s in salary:
+        s["gross_pay"] = float(s.get("gross_pay") or 0)
+        s["net_pay"] = float(s.get("net_pay") or 0)
+        s["total_deduction"] = float(s.get("total_deduction") or 0)
+
+
+    fnf = frappe.get_all(
+        "Full and Final Statement",
+        filters={"employee": employee.name, "docstatus": 1},
+        fields=["name", "total_payable_amount"]
+    )
+   
+    docs = frappe.get_all(
+        "File",
+        filters={
+            "attached_to_doctype": "Employee",
+            "attached_to_name": employee.name
+        },
+        fields=["file_url", "file_name"]
+    )
+
+    context.employee = employee
+    context.salary_slips = salary
+    context.fnf = fnf
+    context.documents = docs
+    context.no_cache = 1
