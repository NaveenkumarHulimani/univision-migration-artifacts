+{% extends "templates/web.html" %}
+
+{% block title %}Ex-Employee Portal{% endblock %}
+
+{% block page_content %}
+
+<link rel="stylesheet" href="./index.css">
+
+<!-- HEADER / PAGE TITLE BAR -->
+<div class="top-header">
+    <h2>Ex-Employee Portal</h2>
+</div>
+
+<div class="ex-container">
+
+    <!-- Sidebar -->
+    <div class="sidebar">
+        <ul class="sidebar-menu">
+            <li data-section="profile" class="active">Profile</li>
+            <li data-section="salary">Salary & FNF</li>
+            <li data-section="documents">Documents</li>
+        </ul>
+    </div>
+
+    <!-- Main Content -->
+    <div class="content-area">
+
+        <!-- Profile Section -->
+        <div id="section-profile" class="section active">
+            <div class="portal-card">
+                <h3 class="welcome-title">Welcome {{ employee.employee_name }}!</h3>
+                <p class="sub-text">{{ employee.department }} Department</p>
+
+                <div class="profile-grid">
+                    <div><strong>Employee ID:</strong> {{ employee.name }}</div>
+                    <div><strong>Relieving Date:</strong> {{ employee.relieving_date }}</div>
+                </div>
+            </div>
+        </div>
+
+        <!-- Salary Section -->
+        <div id="section-salary" class="section">
+
+            <div class="portal-card">
+
+                <h4 class="section-heading">Your Payslips</h4>
+
+                <!-- Month Tabs -->
+                <div class="month-tabs">
+                    {% for slip in salary_slips %}
+                    <div class="month-tab {% if loop.first %}active{% endif %}" 
+                         data-salary="{{ loop.index0 }}">
+                        {{ slip.start_date.strftime("%B %Y") }}
+                    </div>
+                    {% endfor %}
+
+                    {% if fnf %}
+                    <div class="month-tab" data-salary="fnf">Full & Final</div>
+                    {% endif %}
+                </div>
+
+                <!-- Salary Items -->
+                <div id="salary-details-container">
+
+                    {% for slip in salary_slips %}
+                    <div class="salary-box {% if not loop.first %}hidden{% endif %}" id="salary-{{ loop.index0 }}">
+
+                        <canvas class="donut-chart" id="chart-{{ loop.index0 }}"></canvas>
+
+                        <div class="salary-data">
+                            <div class="legend-item green">Take Home<br><span>{{ slip.net_pay }}</span></div>
+                            <div class="legend-item red">Deductions<br><span>{{ slip["total_deduction"] or 0 }}</span></div>
+                            <div class="legend-item grey">Gross Pay<br><span>{{ slip["gross_pay"] or 0 }}</span></div>
+                        </div>
+
+                        <a href="/printview?doctype=Salary Slip&name={{ slip.name }}&format=Salary Slip&no_letterhead=1"
+                           class="view-btn">View Payslip →</a>
+                    </div>
+                    {% endfor %}
+
+                    {% if fnf %}
+                    <div class="salary-box hidden" id="salary-fnf">
+
+                        <canvas class="donut-chart" id="chart-fnf"></canvas>
+
+                        <div class="salary-data">
+                            <div class="legend-item green">Payable Amount<br><span>{{ fnf[0].total_payable_amount }}</span></div>
+                            <div class="legend-item grey">Type<br><span>Settlement</span></div>
+                        </div>
+
+                        <a href="/printview?doctype=Full and Final Statement&name={{ fnf[0].name }}&format=Full and Final Statement&no_letterhead=1"
+                           class="view-btn">Download Statement →</a>
+                    </div>
+                    {% endif %}
+
+                </div>
+            </div>
+        </div>
+
+        <!-- Documents Section -->
+        <div id="section-documents" class="section">
+            <div class="portal-card">
+                <h4>Documents</h4>
+
+                {% if documents %}
+                <ul class="doc-list">
+                    {% for f in documents %}
+                    <li class="doc-item">
+                        <span>{{ f.file_name }}</span>
+                        <a href="{{ f.file_url }}" class="doc-download">Download</a>
+                    </li>
+                    {% endfor %}
+                </ul>
+                {% else %}
+                    <p>No documents found.</p>
+                {% endif %}
+            </div>
+        </div>
+
+    </div>
+</div>
+
+<!-- Chart + Tab Switching JS (unchanged) -->
+<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
+
+<script>
+// Sidebar Navigation
+document.querySelectorAll('.sidebar-menu li').forEach(item => {
+    item.onclick = () => {
+        document.querySelectorAll('.sidebar-menu li').forEach(x => x.classList.remove('active'));
+        item.classList.add('active');
+
+        document.querySelectorAll('.section').forEach(sec => sec.classList.remove('active'));
+        document.getElementById(`section-${item.dataset.section}`).classList.add('active');
+    }
+});
+
+// Month Tab switching
+document.querySelectorAll('.month-tab').forEach(tab => {
+    tab.onclick = () => {
+        document.querySelectorAll('.month-tab').forEach(x => x.classList.remove('active'));
+        tab.classList.add('active');
+
+        document.querySelectorAll('.salary-box').forEach(box => box.classList.add('hidden'));
+
+        const target = tab.dataset.salary;
+        document.getElementById(`salary-${target}`).classList.remove('hidden');
+    };
+});
+
+// Charts
+function createChart(id, values) {
+    const ctx = document.getElementById(id);
+    new Chart(ctx, {
+        type: 'doughnut',
+        data: {
+            labels: ["Take Home", "Deductions"],
+            datasets: [{
+                data: values,
+                backgroundColor: ["#26de81", "#fc5c65"],
+            }]
+        },
+        options: {
+            cutout: "68%",
+            plugins: { legend: { display: false } }
+        }
+    });
+}
+
+{% for slip in salary_slips %}
+createChart("chart-{{ loop.index0 }}", [
+    {{ slip["net_pay"] or 0 }},
+    {{ slip["total_deduction"] or 0 }}
+]);
+{% endfor %}
+
+{% if fnf %}
+createChart("chart-fnf", [
+    {{ fnf[0].total_payable_amount }},
+    0
+]);
+{% endif %}
+</script>
+
+{% endblock %}
